modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["maven", "openjdk11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && ./mvnw spring-boot:run"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run serve -- --host 0.0.0.0"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd backend && ./mvnw spring-boot:run"]

[[ports]]
localPort = 5000
externalPort = 80
